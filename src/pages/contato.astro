---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contato | Carolina Macedo Nutrição">
  <main class="contato-page">
    <h1>Entre em Contato</h1>
    <p class="subtitulo">
      Tem dúvidas? Vamos conversar! Envie sua mensagem ou dúvidas. Terei o maior prazer em ajudar
    </p>

    <div class="contato-container">
      <div class="form-container">
        <form name="contato" method="POST" data-netlify="true">
          <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="message">Mensagem</label>
            <textarea id="message" name="message" rows="5" required></textarea>
          </div>
          <button type="submit" class="btn">Enviar Mensagem</button>
        </form>
      </div>
      <div class="info-container">
        <h2>Informações</h2>
        <div class="info-item">
          <i class="fas fa-envelope"></i>
          <a href="mailto:carolinamacedo.nutri@gmail.com">carolinamacedo.nutri@gmail.com</a>
        </div>
        <div class="info-item">
          <i class="fab fa-whatsapp"></i>
          <a href="https://wa.me/5519983141909" target="_blank">(19) 98314-1909</a>
        </div>
        <div class="info-item">
          <i class="fab fa-instagram"></i>
          <a href="https://www.instagram.com/carolina.minha.nutri/" target="_blank">@carolina.minha.nutri</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contato-page h1, .subtitulo {
    text-align: center;
  }
  .contato-page h1 {
    font-size: 2.8em;
    color: var(--cor-principal);
    margin-bottom: 10px;
  }
  .subtitulo {
    font-size: 1.2em;
    color: var(--cor-texto);
    opacity: 0.8;
    margin-bottom: 60px;
  }
  .contato-container {
    display: flex;
    gap: 50px;
    background-color: var(--cor-branca);
    padding: 40px;
    border-radius: 8px;
  }
  .form-container { flex-basis: 60%; }
  .info-container { flex-basis: 40%; }
  .form-group { margin-bottom: 20px; }
  .form-group label { display: block; margin-bottom: 8px; font-weight: 500; }
  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-family: 'Poppins', sans-serif;
    font-size: 1em;
  }
  .btn {
    display: inline-block;
    background-color: var(--cor-principal);
    color: var(--cor-branca);
    padding: 12px 25px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    border: none;
    cursor: pointer;
    font-size: 1em;
    transition: background-color 0.3s ease;
  }
  .btn:hover { background-color: var(--cor-secundaria); }
  .info-container h2 {
    font-size: 1.8em;
    color: var(--cor-principal);
    margin-top: 0;
  }
  .info-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    /* Ajuste para evitar que o conteúdo ultrapasse */
    word-break: break-all;
  }
  .info-item i {
    font-size: 1.5em;
    color: var(--cor-principal);
    width: 40px;
    /* Adicionado para garantir espaço fixo */
    flex-shrink: 0;
  }
  .info-item a {
    font-size: 1.1em;
    color: var(--cor-texto);
    text-decoration: none;
    /* Permite que o texto quebre a linha */
    overflow-wrap: break-word;
  }
  .info-item a:hover { text-decoration: underline; }
  @media (max-width: 768px) {
    .contato-container { flex-direction: column; }
    /* Ajuste de largura para telas menores */
    .form-container, .info-container { flex-basis: 100%; }
  }
</style>