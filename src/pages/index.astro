---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Início | Carolina Macedo Nutrição">
  <div class="hero-section">
    <div class="hero-container">
      <div class="hero-text">
        <h1>Nutrição e<br>Educação em Diabetes</h1>
        <div class="divisor"></div>
        <p class="hero-tagline">Autonomia no seu tratamento</p>
      </div>
      <div class="logo-container">
        <img src="/logo-circular.png" alt="Logo Carolina Macedo Nutrição">
      </div>
    </div>
  </div>
</Layout>

<style>
  .hero-section {
    background-color: var(--cor-principal);
    width: 100%;
    height: calc(100vh - 81px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }

  .hero-text {
    flex-basis: 50%;
    color: #FFFFFF;
  }

  .hero-text h1 {
    font-family: 'Allura', cursive;
    font-size: 4.7em; 
    font-weight: normal;
    line-height: 1.2;
    margin: 0;
  }

  .divisor {
    width: 80px;
    height: 5px;
    background-color: #FFFFFF;
    margin: 25px 0;
  }

  .hero-tagline {
    font-family: 'Allura', cursive;
    font-size: 2.8em;
    font-weight: normal;
    line-height: 1;
    margin: 0;
  }

  .logo-container {
    flex-basis: 40%;
    text-align: center;
  }

  .logo-container img {
    max-width: 350px;
    width: 100%;
    height: auto;
    border-radius: 50%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  /* ======================================== */
  /* AJUSTES PARA TELAS MENORES (CELULAR)     */
  /* ======================================== */
  @media (max-width: 992px) {
    .hero-container {
      flex-direction: column;
      text-align: center;
      /* PASSO 1: Diminuir o padding para dar mais espaço ao texto */
      padding: 0 20px; 
    }

    .hero-text {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%; 
    }

    .hero-text h1 {
      /* PASSO 2: Reduzir a fonte de forma mais agressiva */
      font-size: 2.9em; 
      line-height: 1.3;
    }

    .divisor {
      margin: 20px auto;
    }
    
    .hero-tagline {
      font-size: 2.2em;
    }

    .logo-container {
      margin-top: 40px;
    }
    
    .logo-container img {
      max-width: 280px;
    }
  }

  /* ======================================== */
/* AJUSTE FINO PARA CELULARES MUITO PEQUENOS (iPhone SE) */
/* ======================================== */
@media (max-width: 375px) {
  .hero-container {
    /* Damos um pouquinho mais de espaço útil */
    padding: 0 15px; 
  }

  .hero-text h1 {
    /* Reduzimos a fonte para o tamanho mínimo necessário */
    font-size: 2.6em; 
  }

  .hero-tagline {
    font-size: 2em;
  }
}
</style>